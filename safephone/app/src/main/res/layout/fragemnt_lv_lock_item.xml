<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_lock_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="3dp"
        android:src="@drawable/ic_launcher"/>

    <ImageView
        android:id="@+id/iv_lock_mark"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="3dp"
        android:src="@drawable/list_button_lock_default"/>

    <TextView
        android:id="@+id/tv_lock_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/black"
        android:layout_toRightOf="@id/iv_lock_icon"
        android:layout_toLeftOf="@id/iv_lock_mark"
        android:gravity="center"
        android:text="test lock"/>
</RelativeLayout>
