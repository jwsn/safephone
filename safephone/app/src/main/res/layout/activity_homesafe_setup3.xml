<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/main_title"
        style="@style/TitleTextStyle"
        android:text="3.设置安全号码" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:text="SIM卡变更后"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:text="报警短信会发送给安全号码"/>

    <EditText
        android:id="@+id/phone_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:textSize="20dp"
        android:inputType="number"
        android:hint="请输入或选择安全号码" />

    <Button
        android:id="@+id/btn_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginTop="1dp"
        android:text="请选择联系人"
        android:textSize="20dp"
        android:textColor="@android:color/black"
        android:background="@drawable/select_contact_btn"
        android:onClick="selectContactBtnClick"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image1"
            android:layout_margin="2dp"
            android:background="@drawable/presence_invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/image2"
            android:layout_margin="2dp"
            android:background="@drawable/presence_invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/image3"
            android:layout_margin="2dp"
            android:background="@drawable/presence_online"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/image4"
            android:layout_margin="2dp"
            android:background="@drawable/presence_invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/setup1"
            android:layout_centerInParent="true"/>
        <Button
            style="@style/SetUpBtnNextStyle"
            android:id="@+id/btn_next" />

        <Button
            style="@style/SetUpBtnPreStyle"
            android:id="@+id/btn_prev" />
    </RelativeLayout>
</LinearLayout>
